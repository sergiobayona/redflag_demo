= form_with(model: employee, html: {class: "flex flex-col bg-white rounded shadow-lg p-12"}) do |form|
  - if employee.errors.any?
    %div{style: "color: red"}
      %h2
        = pluralize(employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - employee.errors.each do |error|
          %li= error.full_message
  .my-5
    = form.label :name
    = form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .my-5
    = form.label :title
    = form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .my-5
    = form.label :email
    = form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .my-5
    = form.label :password
    = form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .my-5
    = form.label :work_focus
    = form.select :work_focus, options_for_select(User::WORK_FOCUSES), {include_blank: true}
  %div
    = form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer"